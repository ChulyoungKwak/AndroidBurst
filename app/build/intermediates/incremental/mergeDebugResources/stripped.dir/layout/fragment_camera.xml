<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android.camera.utils.AutoFitSurfaceView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@android:color/transparent" />

    <ImageButton
        android:id="@+id/camera_capture_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/ic_shutter"
        android:contentDescription="@string/capture"
        android:scaleType="fitCenter" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        >
        <RadioButton
            android:id="@+id/radioButtonType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE1"
            />
        <RadioButton
            android:id="@+id/radioButtonType2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE2"
            />
        <RadioButton
            android:id="@+id/radioButtonType3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE3"
            />
        <RadioButton
            android:id="@+id/radioButtonType4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE4"
            />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|top"
        android:layout_marginTop="80dp"
        >
        <RadioButton
            android:id="@+id/ampButton0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn Off"
            />
        <RadioButton
            android:id="@+id/ampButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 1"
            />
        <RadioButton
            android:id="@+id/ampButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 2"
            />
        <RadioButton
            android:id="@+id/ampButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 3"
            />
    </RadioGroup>

</FrameLayout>